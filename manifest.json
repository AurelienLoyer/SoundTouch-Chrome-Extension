{
  "manifest_version": 2,

  "name": "SoundTouch Chrome Extension",
  "description": "This extension will help you to controll SoundTouch with your favorite brower Chrome :)",
  "version": "1.0",

  "permissions": [
    "storage",
    "http://*/*",
    "http://*/",
    "https://*/*",
    "https://www.google.com/*",
    "http://www.google.com/*"
  ],

  "options_ui": {
    "page": "/options/options.html",
    "chrome_style": true
  },

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "/widget/popup.html"
  }
}
